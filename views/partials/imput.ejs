<h1>登録</h1>
<form method="POST">
    <div>
        <label for="name">商品名：</label>
        <input type="text" id="name" name="name" value="<%= locals.name ? name : ""%>"/>
    </div>
    <div>
        <label for="price">値段：</label>
        <input type="number" id="price" name="price" value="<%= locals.price ? price : ""%>"/>
    </div>
    <div>
        <label for="tag">商品タイプ：</label>
        <select name="tag" id="tag">
            <option value="meat" selected>肉・卵</option>
            <option value="fish">魚介類</option>
            <option value="vegetable">野菜</option>
            <option value="sweet">お菓子</option>
            <option value="drink">飲料</option>
            <option value="cloths">服</option>
            <option value="others">他</option>
        </select>
    </div>
    <div>
        <label for="amount">量：</label>
        <input type="number" id="amount" name="amount" value="<%= locals.amount ? amount : ""%>"/>
    </div>
    <div>
        <label for="count">数え方：</label>
        <select name="count" id="count">
            <option selected>個</option>
            <option>g</option>
            <option>匹</option>
            <option>着</option>
        </select>
    </div>
    <div>
        <label for="pic">写真URL : </label>
        <input type="text" id="pic" name="pic" value="<%= locals.pic ? pic : ""%>"/>
    </div>
    <div>
        <input type="submit" value="確認" />
    </div>
</form>